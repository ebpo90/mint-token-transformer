{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "files": [
        {
          "destination": "css/variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "tsDeclarations": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "ts/declarations.d.ts",
          "format": "typescript/es6-declarations"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "js/variables.js",
          "format": "javasript/es6"
        }
      ]
    },
     "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "css/variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}
