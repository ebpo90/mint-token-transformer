{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "files": [
        {
          "destination": "css/variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "files": [
        {
          "destination": "typescript/es6-declarations",
          "format": "typings/es6"
        }
      ]
    },
     "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "css/variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}
